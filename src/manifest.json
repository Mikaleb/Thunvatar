{
  "manifest_version": 2,
  "name": "Thunvatar",
  "description": "Adding a column with the favicon of sender's domain to the message list",
  "version": "1.0.1",
  "homepage_url": "https://github.com/Mikaleb/thunvatar",
  "author": "Mikaleb",
  "applications": {
    "gecko": {
      "id": "thunvatar@mikaleb.com",
      "strict_min_version": "68.0a1",
      "strict_max_version": "110.*"
    }
  },
  "experiment_apis": {
    "ThunvatarApi": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["ThunvatarApi"]],
        "script": "api/experiments.js"
      }
    }
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "icons": {
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "64": "assets/icons/64.png",
    "128": "assets/icons/128.png"
  },
  "permissions": ["storage"]
}
